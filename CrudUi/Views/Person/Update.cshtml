@model PersonForUpdateDTO
<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="text-Dark">Update person</h2>
        </div>
        <div class="col text-end mt-2">
            <a asp-controller="Person" asp-action="Index" class="btn btn-outline-primary"><i class="bi bi-arrow-left-square-fill"></i> Back to persons list</a>
        </div>
    </div>
    <form asp-action="Update" asp-controller="Person" method="post">
        <div class="form-group p-1 mx-3 mt-0">
            <label asp-for="Name" class="form-label">Name:</label>
            <input asp-for="Name"  class="form-control" placeholder="Enter name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group p-1 mx-3">
            <label asp-for="Email" class="form-label">Email:</label>
            <input asp-for="Email"  class="form-control" placeholder="Enter email">
            <span class="text-danger" asp-validation-for="Name"></span>

        </div>
        <div class="form-group p-1 mx-3">
            <label asp-for="DateOfBirth" class="form-label">Date of Birth:</label>
            <input asp-for="DateOfBirth"  class="form-control">
            <span class="text-danger" asp-validation-for="DateOfBirth"></span>

        </div>
        <div class="form-group p-1 mx-3">
            <label class="form-label">Gender:</label>
            <div class="form-check ">
                <input asp-for="Gender" class="form-check-input" type="radio" value="male">
                <label class="form-check-label" for="male">
                    Male
                </label>
            </div>
            <div class="form-check">
                <input asp-for="Gender" class="form-check-input" type="radio"  value="female">
                <label class="form-check-label" for="female">
                    Female
                </label>
            </div>
            <span class="text-danger" asp-validation-for="Gender"></span>
        </div>
        <div class="form-group p-1 mx-3">
            <label for="country" class="form-label">Country:</label>
            <select class="form-select form-control" asp-for="CountryId"
            asp-items="@ViewBag.Countries">
                <option value="" disabled>Please Select Country</option>
            </select>
            <span class="text-danger" asp-validation-for="CountryId"></span>

            <div class="form-group p-1 mt-2">
                <label asp-for="ReceiveEmails"  class="form-check-label">Receive Emails:</label>
                <input asp-for="ReceiveEmails" type="checkbox" class="form-check-input ms-2" value="true">
            </div>
        </div>

        <button type="submit" class="btn btn-primary ms-3 mt-2">Save</button>
